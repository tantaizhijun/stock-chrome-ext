{
  "manifest_version": 2,
  "name": "中国平安",
  "version": "1.0",
  "description": "每隔6秒请求中国平安的股票",
  "icons": {
    "16": "image/16.png",
    "48": "image/48.png",
    "128": "image/128.png"
  },
  "browser_action": {
    "default_action": {
      "19": "image/16.png",
      "38": "image/48.png"
    },
    "default_title": "中国平安",
    "default_popup": "popup.html"
  },
  "permissions": [
    "*://*.baidu.com/",
    "notifications",
    "background"
  ],
  "background": {
    "page":"background.html",
    "persistent": true
  }
}